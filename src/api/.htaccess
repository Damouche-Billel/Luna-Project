# Apache configuration for LUNA Newsletter API

# Enable rewrite engine
# RewriteEngine On

# Security: Prevent directory listing
Options -Indexes

# Security: Deny access to config files from web
<Files "config.php">
    Require all denied
</Files>

# Security: Deny access to test files in production (remove this in development)
# <Files "test-connection.php">
#     Require all denied
# </Files>

# CORS headers
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Enforce HTTPS (uncomment when deployed with SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# PHP settings
php_flag display_errors Off
php_value max_execution_time 30
php_value post_max_size 2M
php_value upload_max_filesize 2M
